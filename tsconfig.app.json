{
  "compilerOptions": {
    "target": "ES6", // Use ES6 to support modern features while being broadly compatible
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"], // Include necessary libraries
    "module": "ESNext", // ESNext is fine for modern JS modules
    "skipLibCheck": true,

    /* Module Resolution */
    "moduleResolution": "node", // Use Node.js style module resolution
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
